/* pages/address/address.wxss */
.address{
  background: white;
  border-top: 1px solid #ddd;
  padding: 10px 10px;
  display: flex;
  flex-direction: column;
  font-size: 12px;
  color: #777;
  
}
.icon{
  display: flex;
  align-items: center
}
.address_list{
  display: flex;
  justify-content: space-between;
  border-top: 1px solid #ddd;
  padding: 10px 0;
}
.address-con{
  display: flex;
    width: 85%;
}
.address_name{
  font-size: 14px;
  color: #555;
  margin-left: 10px;
}
.edit{
  display: flex;
  flex-direction: row-reverse;
  justify-content: flex-end;
  align-items: center;
}
.address_bd{
  margin-left: 10px;
}
.add_address{
  background: #21C0AE;
  height: 40px;
  line-height: 40px;
  text-align: center;
  position: fixed;
  bottom: 0;
  z-index: 500;
  width: 100%;
  font-size: 14px;
}