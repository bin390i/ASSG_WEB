/* pages/topic/topic_1/topic_1.wxss */

page{
  background-color: white;
}

.topic-name{
  height: 30px;
 line-height: 30px;
text-align: center;
margin-bottom: 20rpx;
}

.topic-name text{
  color: white;
  font-size: 18px;
  font-family: "Times New Roman", Times, serif;
}

.goods{
  display: flex;
  height: 250rpx;
  margin: 0rpx 20rpx 20rpx 20rpx; 
  border: 1rpx solid #C7C7C7;
  box-shadow: 10rpx 10rpx 10rpx #EEE9E9;
}
.goods .goods-img{
  height: 100%;
  width: 260rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods .goods-img image{
  width: 200rpx;
  height: 200rpx;
}
.goods .cont{
  display: flex;
  flex-direction: column;
}

.goods .goods-buy{
  width: 140rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50rpx;
  float: right;
  margin-top: 20rpx;
}
.goods .goods-buy text{
  color: white;
  font-size: 26rpx;
}