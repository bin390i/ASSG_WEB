/* pages/appraisal/appraisal.wxss */

.item image {
  width: 80px;
  height: 80px;
}

.item {
  display: flex;
  height: 100px;
  border-top: 1rpx solid gainsboro;
  background: white;
  padding: 10px 10px;
}

.item-right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 10px;
  width: 100%;
}

.item-right-bottom {
  display: flex;
  justify-content: space-between;
}

.star-cont {
  background: white;
  padding: 10px 10px;
  margin-top: 10px;
}

.star-view {
  display: flex;
  align-items: center;
}

.textarea-view {
  background: white;
  margin-top: 10px;
  padding: 10px 10px;
}

textarea {
  border: 1rpx solid gainsboro;
  height: 100px;
  width: 100%;
}

.capture-view {
    display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background: white;
  margin-top: 10px;
  padding: 10px 10px;
}

.capture-img {
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid gainsboro;
  width: 60px;
  height: 50px;
  margin-top: 10px;
}
.upload-img{
  position: relative;
  width:90px;
  height:70px;
  margin-right:10px;
  margin-bottom:10px;
}

.upload-img icon{
  position: absolute;
  top: 0;
  right: 0;
}


.btn-bottom{
  position: fixed;
  bottom: 0;
  height: 40px;
  width: 100%;
  z-index: 500;
  background:  #21C0AE;
  line-height: 40px;
  text-align: center;
}

.btn-bottom text{
  color: white;
  font-size: 15px;
}
