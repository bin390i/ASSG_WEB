/* pages/detail/detail.wxss */
@import "../main/main.wxss";  /*导入外联样式表*/

swiper {
  height: 300px;
}

.goods-cont {
  padding: 10px 10px;
  background-color: white;
}

.goods {
  display:flex;
  justify-content:space-between;
  flex-direction:column;

}

.goods-price {
  display: flex;
  justify-content: space-between;
  margin-top: 15px;
  background-color: white;
}

.spec {
  margin-top: 10px;
  background-color: white;
}

.unit {
  padding: 15px 10px;
}

.unit-text {
  border: 1rpx solid #f00;
  padding: 5px 5px;
  border-radius: 5px;
  color: #f00;
  margin-left: 10px;
}

.unit-num {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.unit-num-text {
  margin-left: 10px;
  display: flex;
}

.num-jia {
  width: 30px;
  height: 30px;
  line-height: 28px;
  text-align: center;
  font-size: 18px;
  color: #333;
  cursor: pointer;
  border: 1px solid #e6e6e6;
}

.num-jian {
  width: 30px;
  height: 30px;
  line-height: 28px;
  text-align: center;
  font-size: 18px;
  color: #333;
  cursor: pointer;
  border: 1px solid #e6e6e6;
}

.input-num {
  width: 50px;
  height: 30px;
  line-height: 28px;
  text-align: center;
  font-size: 18px;
  color: #333;
  cursor: pointer;
  border-top: 1px solid #e6e6e6;
  border-bottom: 1px solid #e6e6e6;
}

.comment{
  margin-top: 10px;
  background-color: white;
}
.comment-count{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10px 10px;
}

.comment-content{
  display: flex;
  flex-direction: row;
  padding: 10px 5px;
}

.comment-left{
  width: 80;
  height: 100%;
}
.comment-right{
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}

.comment-top{

}

.comment-top-user{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.comment-top-star{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-right: 50px;
}

.star-red{
  color: red;
}

.comment-bottom{
  margin-top: 10px;
}

.text-12{
  font-size: 12px;
}

.watch-all{
  display: flex;
  justify-content: center;
  padding: 10px 0;
}
.watch-all-text{
  border: 1px solid black;
  border-radius: 15px;
  padding: 3px 8px;
}

.tuijian{
  margin-top: 10px;
  background-color: white;
  padding: 10px 10px;
}

.cars{
  width: 100%;
  height: 40px;
  background-color: white;
  position: fixed;
  bottom: 0;
  z-index: 500;
  line-height: 40px;
  border-top: 1rpx solid #f5f4f9;
}
.btn-add{
  background-color: #21C0AE;
  width: 300rpx;
  height: 40px;
  line-height: 40px;
  text-align: center;
  float: right;

}

.add-text{
  color: white;
  font-size: 13px;
}
