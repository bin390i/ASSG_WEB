/* pages/orderDetail/orderDetail.wxss */

.order-tatle {
  display: flex;
  flex-direction: column;
  background: white;
  padding: 10px 10px;
}

 .ot {
  margin-top: 10px;
}

.address {
  display: flex;
  flex-direction: column;
  background-color: white;
  padding: 10px 10px;
  margin-top: 10px;
}

.address .detail {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.order-item{
  background:  white;
  padding: 10px 10px;
  margin-top: 10px;
}

.item image{
  width: 80px;
  height: 80px;
}

.item{
  display: flex;
  height: 100px;
  padding: 10px 0px;
  border-top: 1rpx solid gainsboro;
}

.item-right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 10px;
  width: 100%;
}

.item-right-top{

}

.item-right-bottom{
  display: flex;
  justify-content: space-between;
}

.order-price{
  display: flex;
  justify-content: space-between;
}

.btn-bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 500;
  height: 120rpx;
  line-height: 120rpx;
  background-color: white;
  border-top: 1rpx solid #ddd;
  padding: 10px 10px;
}

.btn-cancel{
  position: absolute;
  height: 80rpx;
  width: 70px;
  line-height: 80rpx;
  text-align: center;
  right: 100px;
  border: 1rpx solid  #5B5B5B;
  border-radius: 5px;
}

.btn-pay{
  position: absolute;
  height: 80rpx;
  width: 70px;
  line-height: 80rpx;
  text-align: center;
  right: 10px;
  border: 1rpx solid  red;
  border-radius: 5px;
}